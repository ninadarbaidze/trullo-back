generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Board {
  id Int @id @default(autoincrement())
  name String
  columns Column[]
  tasks Task[]
  // columnOrder ColumnOrder?
}

